<%- include("layouts/head")  %> 
  <body>
    <%- include('layouts/menu') %> 
    <section class="bg-slate-50 h-screen w-screen dark:bg-gray-800">
      <nav
        class="h-14 flex px-3 py-3 justify-between items-center md:px-6 md:py-4 lg:px-8 lg:py-6"
      >
        <a href="/" class="font-semibold text-blue-600 text-base uppercase">
          Confess.
        </a>
        <div class="flex items-center gap-1">
          <p class="text-xs text-gray-400 font-normal lg:text-base dark:text-gray-300">
            Remember password?
          </p>
          <a
            href="/signin"
            class="uppercase text-[10px] border-[1px] border-solid border-blue-400 px-3 py-1 rounded-xl text-gray-500 lg:px-6 lg:py-2 lg:text-sm lg:rounded-3xl lg:border-2 hover:bg-blue-400 hover:text-white font-semibold cursor-pointer transition 0.5s dark:text-gray-400"
          >
            Sign in
          </a>
        </div>
      </nav>
      <div class="fromContainer flex justify-center items-center w-full">
        <div
          class="w-full flex registerForm h-full items-center justify-center sm:w-2/3 md:w-2/4"
        >
          <form
            action="/send_mail" method="post"
            class="w-full px-4 flex flex-col gap-4 md:w-3/5 md:px-0 lg:w-3/5 md:gap-6 lg:gap-6 forgotEmailForm"
          >
            <div class="w-full mb-4 sm:mb-6 lg:mb-8">
              <h1
                class="font-extrabold text-xl sm:text-4xl md:text-3xl text-gray-800 xl:text-4xl dark:text-gray-500" 
              >
                Welcome to Confess.
              </h1>
              <p class="text-gray-400 text-sm font-normal dark:text-gray-400">
                Reset your password now
              </p>
            </div>
            <% if (messages.error) { %>
              <span class="text-red-500 font-normal text-center w-full bg-red-50 border-2 rounded-md border-red-300 py-1 text-xs font-sans dark:bg-transparent dark:border-red-600"><%= messages.error %> </span>
            <% } %>
            <div class="flex flex-col w-full">
              <label
                for="email"
                class="text-xs pb-1 text-gray-600 font-medium xl:text-sm dark:text-gray-400"
                >Email</label
              >
              <input
                type="email"
                placeholder="Enter your registered email id"
                name="email"
                class="bg-transparent w-full h-11 pl-2 border-2 border-solid border-gray-300 rounded-md placeholder:text-sm text-base placeholder:text-gray-300 xl:h-12 dark:border-gray-600 dark:placeholder:text-gray-600"
              />
            </div>
            <div class="h-11 w-full flex items-center justify-center">
              <input
                type="submit"
                value="Next"
                class="w-full h-full bg-blue-700 dark:bg-blue-900 rounded-md text-white text-sm font-medium lg:text-base cursor-pointer hover:shadow-md hover:shadow-blue-400 xl:h-12"
              />
            </div>
          </form>
        </div>
      </div>
    </section>
      <%- include('layouts/scripts') %> 
  </body>

</html>