<%- include("layouts/head")  %> 
  <body>
    <%- include('layouts/navbar') %> 
    <%- include('layouts/menu') %> 
    <section class="bg-slate-50 sm:bg-slate-200 h-screen w-screen dark:bg-gray-800">
      <nav
        class="h-14 flex px-3 py-3 justify-between items-center md:px-6 md:py-4 lg:px-8 lg:py-6"
      >
        <a href="/" class="font-semibold text-blue-600 text-base uppercase">
          Confess.
        </a>
        <div class="flex items-center gap-1">
          <p class="text-xs text-gray-400 font-normal lg:text-base">
            Update Your Email
          </p>
        </div>
      </nav>
      <div
        class="fromContainer flex justify-center items-center w-full h-[calc(100vh - 56px)]"
      >
        <div
          class="w-full flex registerForm h-full items-center justify-center sm:w-2/3 md:w-2/4"
        >
          <form
            action="/update/email" method="post"
            class="w-[90%] flex flex-col gap-4 md:w-3/5 lg:w-3/5 md:gap-6 lg:gap-6 sm:bg-white sm:p-5 sm:rounded-lg sm:shadow-xl shadow-red-700 updateEmailForm"
          >
            <div class="w-full mb-4 sm:mb-6 lg:mb-8 text-center">
              <h1
                class="font-extrabold text-xl sm:text-4xl md:text-3xl text-gray-800 xl:text-4xl dark:text-gray-300"
              >
                Welcome to Confess.
              </h1>
              <p class="text-gray-400 text-xs dark:text-gray-500">
                Enter all credentails carefully to change your password
              </p>
            </div>
             <% if (messages.error) { %>
              <span class="text-red-500 font-normal text-center w-full bg-red-50 border-2 rounded-md border-red-300 py-1 text-xs font-sans dark:bg-transparent dark:border-red-600"><%= messages.error %> </span>
            <% } %>
            <div class="flex flex-col w-full">
              <label
                for="email"
                class="text-sm pb-1 text-gray-600 font-medium xl:text-sm dark:text-gray-400"
                >Email</label
              >
              <input
                type="email"
                name="email"
                placeholder="Enter your new email id here"
                class="bg-transparent w-full h-11 pl-2 border-2 font-sans border-solid border-gray-300 rounded-lg placeholder:text-sm text-base placeholder:text-gray-300 xl:h-12 emailInput dark:border-gray-600 dark:placeholder:text-gray-600 dark:text-white"
                value="<%= messages.email %>"
              />
            </div>
            <div class="flex-col w-full otpDiv">
              <label
                for="password"
                class="text-sm pb-1 text-gray-600 font-medium xl:text-sm dark:text-gray-400"
                >Password</label
              >
              <input
                type="password"
                name="password"
                placeholder="Enter your password"
                class="passwordInput bg-transparent w-full h-11 pl-2 border-2 font-sans border-solid border-gray-300 rounded-lg placeholder:text-sm text-base placeholder:text-gray-300 xl:h-12 dark:placeholder:text-gray-600 dark:text-white"
              />
            </div>
            <button type="button" class="nextBtn w-full h-11 bg-green-600 rounded-lg text-white text-sm font-medium lg:text-base cursor-pointer xl:h-12 font-sans tracking-wide">
                    Next
            </button>
          </form>
        </div>
      </div>
    </section>
    <%- include('layouts/scripts') %> 
    <script src="/js/updateEmail.js"></script>
  </body>
</html>
