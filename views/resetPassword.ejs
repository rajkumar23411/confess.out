<%- include("layouts/head")  %> 
  <body>
    <%- include('layouts/menu') %> 
    <section class="bg-slate-50 h-screen w-screen dark:bg-gray-800">
      <nav
        class="h-14 flex px-3 py-3 justify-between items-center md:px-6 md:py-4 lg:px-8 lg:py-6"
      >
        <a href="/" class="font-semibold text-blue-600 text-base uppercase">
          Confess.
        </a>
        <div class="flex items-center gap-1">
          <p class="text-[10px] text-gray-400 font-normal lg:text-base">
            Remember password?
          </p>
          <a
            href="./index.html"
            class="uppercase text-[10px] border-[1px] border-solid border-blue-400 px-3 py-1 rounded-xl text-gray-500 lg:px-6 lg:py-2 lg:text-sm lg:rounded-3xl lg:border-2 hover:bg-blue-400 hover:text-white font-semibold cursor-pointer transition 0.5s"
          >
            Sign in
          </a>
        </div>
      </nav>
      <div class="fromContainer flex justify-center items-center w-full">
        <div
          class="w-full flex registerForm h-full items-center justify-center sm:w-2/3 md:w-2/4"
        >
          <form
            action="/reset_password" method="post"
            class="w-full px-9 flex flex-col gap-4 md:w-3/5 md:px-0 lg:w-3/5 md:gap-6 lg:gap-6"
          >
            <div class="w-full mb-4 sm:mb-6 lg:mb-8">
              <h1
                class="font-extrabold text-xl sm:text-4xl md:text-3xl text-gray-800 xl:text-4xl dark:text-gray-300"
              >
                Welcome to Confess.
              </h1>
              <p class="text-gray-400 text-sm font-medium dark:text-gray-500">
                Reset your password now
              </p>
            </div>
            <%- include('layouts/alert_error') %> 
            <div class="flex flex-col w-full">
              <label
                for="password"
                class="text-sm pb-1 text-gray-600 font-medium xl:text-sm dark:text-gray-400"
                >Password</label
              >
              <input
                type="password"
                name="password"
                placeholder="6+ Characters, 1 Captial letter"
                class="bg-transparent w-full h-11 pl-2 border-2 border-solid border-gray-300 rounded-lg placeholder:text-sm text-base placeholder:text-gray-300 xl:h-12  dark:border-gray-600 dark:placeholder:text-gray-600 dark:text-white"
              />
            </div>
            <div class="flex flex-col w-full">
              <label
                for="repeatPassword"
                class="text-sm pb-1 text-gray-600 font-medium xl:text-sm dark:text-gray-400"
                >Re-enter password</label
              >
              <input
                type="text"
                name="repeatPassword"
                placeholder="Confrim your password"
                class="bg-transparent w-full h-11 pl-2 border-2 border-solid border-gray-300 rounded-lg placeholder:text-sm text-base placeholder:text-gray-300 xl:h-12 dark:border-gray-600 dark:placeholder:text-gray-600 dark:text-white"
              />
            </div>
            <div class="h-11 w-full flex items-center justify-center">
              <input
                type="submit"
                value="Next"
                class="w-full h-full bg-blue-700 rounded-lg text-white text-sm font-medium lg:text-base cursor-pointer hover:shadow-md hover:shadow-blue-400 xl:h-12"
              />
            </div>
          </form>
        </div>
      </div>
    </section>
    <%- include('layouts/scripts') %>
</body>
</html>